<div class="search_user">
    <table class="grid grid02">
        <tbody>
            <tr height="35">
                <td class="t01" width="80">
                    关键字： 
                </td>
                <td class="t02">
                   <%= text_field :search_user, :name, :class=>'default_input', :style=>'width:300px;' %>
                </td>
            </tr>
        </tbody>
    </table>
</div>
<div class="gender_tabel">
    <div class="gender_tabel02">
        <table class="grid grid02">
            <tbody>
                <tr height="35">
                    <td class="t01" width="80">
                        所在地区： 
                    </td>
                    <td class="t03" >
                         <%=select :search_user, :province_id, Province.find(:all).collect {|p| [ p.name, p.id ] }, {:prompt=>'省/直辖市'} %>
                <span id="cities_span"></span>
                <!--
				<%= observe_field("search_user_province_id",:url => { :action => 'get_cities',:controller=>'ajax',:model=>'search_user' },:before=>'show_loadding("cities_span")',:update => 'cities_span',:with => "'model=search_user&city_id=#{@search_user.city_id}&id='+value") %>
                <script>show_loadding("cities_span");
                    new Ajax.Updater("cities_span", "/ajax/get_cities", {
                        asynchronous: true,
                        evalScripts: true,
                        parameters: "model=search_user&city_id=<%=@search_user.city_id%>&id=" + $("search_user_province_id").value + "&model=search_user"
                    });
                </script>
				-->
				<script>
                	jQuery("#search_user_province_id").change(function(){
						show_loadding("cities_span");
						jQuery("#cities_span").load("/ajax/get_cities?model=search_user&city_id=<%=@search_user.city_id%>&id=" + jQuery("#search_user_province_id").val())
					})
					
                	show_loadding("cities_span");
                    jQuery("#cities_span").load("/ajax/get_cities?" + "model=search_user&city_id=<%=@search_user.city_id%>&id=" + jQuery("#search_user_province_id").val())
                </script>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<!--gender_tabel-->
<div class="gender_tabel" style="border-bottom: 1px dotted rgb(204, 204, 204);">
    <div class="gender_tabel01">
        <table class="grid grid02">
            <tbody>
                <tr height="35">
                    <td class="t01" width="80">
                        年代： 
                    </td>
                    <td class="t04" style="text-align:left;">
                        <%=select :search_user, :birthyear, APP_CONFIG['time_birthyears'].split('|').collect {|p| [ "#{p}后", p.to_i ] }, {:prompt=>'年代'} %>
        
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="gender_tabel02">
        <table class="grid grid02">
            <tbody>
                <tr height="35">
                    <td class="t01" width="80">
                        所在行业： 
                    </td>
                    <td class="t02">
                        <%=select :search_user, :industry_id, Industry.find(:all).collect {|p| [ p.name, p.id ] }, {:prompt=>'所在行业'} %>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
