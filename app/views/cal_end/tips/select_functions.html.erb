<h1>选择功能 <%= @tip.distance_human%></h1>

<% form_tag :action => 'update_functions', :id => @tip, :t=>params[:t], :page=>params[:page] do %>
  	<div style="margin: 30px;">
	<% for f in %w(闪光时刻 宝宝发育 养育贴士 成长早教 表情心绪 才艺本领 宝宝语录 事件活动)%>
		<%= check_box_tag "functions[]", f, @month.functions.to_s.include?(f)%><%= f%>
	<% end %>
	</div>
	<div style="margin: 30px;">
  		<%= submit_tag '保存' %> | <%= link_to '返回', :action => 'list', :page=>params[:page] %>
  	</div>
<% end %>



