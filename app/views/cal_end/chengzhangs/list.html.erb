<h1>0-6岁宝宝成长发育监测</h1>

<table class="list" border="1" width="98%">
  <tr class="head">
    <th>月份</th>
    <th>发育指标</th>
    <th>营养指南</th>
    <th>亲子游戏</th>
    <th>注意事项</th>
    <th>儿童教养</th>
    <th>智力开发</th>
    <th colspan=3>操作</th>
  </tr>
  
<% for chengzhang in @chengzhangs %>
  <tr>
    <td><%=h 3+(chengzhang.month-1)/4 %>岁<%= (chengzhang.month-1)*3 % 12%>月</td>
    <td><%=h chengzhang.fayu %></td>
    <td><%=h chengzhang.yingyang %></td>
    <td><%=h chengzhang.qinzi %></td>
    <td><%=h chengzhang.zhuyi %></td>
    <td><%=h chengzhang.jiaoyang %></td>
    <td><%=h chengzhang.zhili %></td>
    
    <td><%= link_to '修改', :action => 'edit', :id => chengzhang %></td>
  </tr>
<% end %>
</table>


<%= will_paginate @chengzhangs %>

