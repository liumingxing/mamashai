<div id="middle">
    <div id="css_mainbody">
        <h1 class="title">VIP卡管理
        </h1>

<table class="grid" border="1" width="98%%">
  <tr class="head">
    <th>号码</th>
    <th>价值</th>
    <th>已用</th>
    <th>卡主</th>
    <th colspan=3>操作</th>
  </tr>
  
<% for vip in @vips %>
  <tr>
    <td><%=h vip.code %></td>
    <td><%=h vip.value %></td>
    <td><%=h vip.used %></td>
    <td><%=h vip.holder %></td>
    
    <td>
    	<%= link_to '修改', :action => 'edit', :id => vip %>
    	<%= link_to '删除', { :action => 'destroy', :id => vip }, :confirm => '确认删除吗?', :method => :post %>
    </td>
  </tr>
<% end %>
</table>


<%= will_paginate @vips %>

<br />

<%= link_to '新建VIP卡', :action => 'new' %>

</div>
</div>
