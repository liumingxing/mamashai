  <div id="middle">
        <div id="css_mainbody">
            <h1 class="title">团购导航-分类管理</h1>
			<div style="text-align:center;" class="green"><%= flash[:notice]%></div>
			<div id="page_count">
				<span style="float:right;">
					共有
					<b class="blue">
						<%=h @tuan_categories.size%>
					</b>
					条记录
				</span>
			</div>
			<div class="clear"></div>
            <table class="grid">
            	<tr>
            		<th width="5%">序号</th>
				    <th width="20%">分类名称</th>
				    <th width="20%">剩余信息数</th>
				    <th width="20%">创建时间</th>
					<th width="10%">当前所属分类</th>
					<th width="20%">所属分类修改</th>
				  </tr>
               <% if @tuan_categories.size == 0 %>
					<tr>
						<td colspan=6>
							<b>暂无记录</b>
						</td>
					</tr>
				<% else %>
					<% @tuan_categories.each_with_index do |category,index| %>
					  <tr>
					  	<td><%=(index+1).to_s%></td>
					    <td><%=h category.name %></td>
					    <td><%=h category.tuans_count%></td>
					    <td><%=category.created_at.strftime("%Y年%m月%d日<br/>%H时%M分%S秒") %></td>
					    <td><%=h category.tuan_category.blank? ? '暂无' : category.tuan_category.name%></td>
					    <td>
					    	<% form_for category,:url => { :action => "category_temp_update", :id=>category.id } do |f| %>
					    		<%= f.select :tuan_category_id, TuanCategory.all.collect{|tc| [tc.name,tc.id]}, {:prompt=>'请选择所属分类'} %>
								<%= f.submit "保存"%>
							<% end %>
						</td>
					  </tr>
					<% end %>
				<%end%>
            </table>
			<div>
				<%= will_paginate @tuan_categories %>
			</div>
        </div>
        <div class="clear"></div>
    </div>
