<fieldset>
    <legend>
        附加邮资管理
    </legend>
	<div class="line_item">
        <span class="title"><%= f.label :name,"名称：" %>
        </span>
        <span class="content"><%= f.text_field :name, :size=>50,:required=>"required" %>
            <%= f.error_message_on :name %>
        </span>
    </div>
    <div class="line_item">
        <span class="title"><%= f.label :fee,"价格(元/kg)：" %>
        </span>
        <span class="content"><%= f.text_field :fee, :size=>50,:required=>"required" %>
            <%= f.error_message_on :fee %>
        </span>
    </div>
    <div class="line_item">
        <span class="title"><%= f.label :info,"描述：" %>
        </span>
        <span class="content"><%= f.text_field :info, :size=>50 %>
            <%= f.error_message_on :info %>
        </span>
    </div>
</fieldset>
<div class="submit">
	<span class="left">
    	<input type="submit" name="submit" value="提交">
	</span>
	<span class="right">
		<%= link_to '返回', '/mms/mms_tuans/over_weight_index' %>
	</span>
</div>
<style type="text/css">
    fieldset {
        border: 1px solid #D1D1D1;
        color: #333333;
        line-height: 220%;
        margin: 20px;
        padding: 10px;
    }
    
    legend {
        background: none repeat scroll 0 0 #FFFFFF;
        color: #666666;
        font-weight: 800;
    }
    
    fieldset div.line_item {
        height: 30px;
        display: block;
		width:100%;
    }
    
    .line_item .title {
        margin-left: 30px;
        font-weight: bolder;
        width: 150px;
        float: left;
    }
    
    .line_item .content {
        float: left;
    }
	div.submit{
		margin:20px;
		text-align:center;
	}
	div.submit span{
		margin:0 20px;
	}
</style>
