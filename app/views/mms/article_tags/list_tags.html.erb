<div id="middle">
    <div id="css_mainbody">
    	
	<h1 class="title"><%=@type.name%>标签<span style="float:right;margin-right: 10px;"><%= link_to "添加", :action=>'new_tag', :id=>@type%> | <%= link_to "返回", :action=>"index"%></span></h1>
	
	<table class="grid">
	  <tr>
	  	<th>标签名</th>
		<th colspan=3>操作</th>
	  </tr>
	
	<% @tags.each do |t| %>
	  <tr>
	  	<td><%= t.name %></td>
	    <td><%= link_to '修改', :action=>"edit_tag", :id=>t %></td>
	    <td><%= link_to '删除', {:action=>"delete_tag", :id=>t}, :confirm => '确定删除吗?', :method => :delete %></td>
	  </tr>
	<% end %>
	</table>
	</div>
</div>