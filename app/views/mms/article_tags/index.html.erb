<div id="middle">
    <div id="css_mainbody">
    	
	<h1 class="title">资讯标签类别<span style="float:right;margin-right: 10px;"><%= link_to "添加", :action=>'new_type'%></span></h1>
	
	<table class="grid">
	  <tr>
	  	<th>类别名称</th>
		<th colspan=3>操作</th>
	  </tr>
	
	<% @tag_types.each do |t| %>
	  <tr>
	  	<td><%= t.name %></td>
	    <td><%= link_to '标签', :action=>"list_tags", :id=>t %></td>
	    <td><%= link_to '修改', :action=>"edit_type", :id=>t %></td>
	    <td><%= link_to '删除', {:action=>"delete_type", :id=>t}, :confirm => '删除类别将删除所有包含的标签，确定删除吗?', :method => :delete %></td>
	  </tr>
	<% end %>
	</table>
	</div>
</div>