<div id="middle">
    <div id="css_mainbody">
        <h1 class="title">付款记录
		</h1>
        <table class="grid">
            <thead>
                <tr>
                    <th>
                        订单号
                    </th>
                    <th>
                        用户
                    </th>
                    <th>
                        订单价格
                    </th>
                    <th>
                        付款时间
                    </th>
                    <th>
                        付款金额
                    </th>
                    <th>
                        买家邮箱
                    </th>
                    <th>
                        付款状态
                    </th>
                </tr>
            </thead>
            <% for payment in @payments %>
                <tr>
                    <td><%= payment.order.id %></td>
                    <td><%= payment.order.user.name %></td>
                    <td><%= payment.order.payment %></td>
                    <td><%= payment.created_at.to_s(:db) %></td>
                    <td><%= payment.price %></td>
                    <td><%= payment.buyer_email %></td>
                    <td><%= payment.status %></td>
                </tr>
            <% end %>
        </table>
    </div>
</div>