 <div id="middle">
        <div id="css_mainbody">
            <h1 class="title">验证邮件</h1>
			<form action="/mms/users/list_user_signups">
			  用户邮箱：
			  <input type="text" name="search_email" id="search_email">
			  <input type="submit" value="搜索" name="commit">
			</form>
            <table class="grid">
		        <tbody>
		            <tr>
		                <th>
		                    注册邮件
		                </th>
						<th>
				          用户名
				        </th>
				        <th >
				          微博
				        </th>
						<th>
				          关注
				        </th>
						<th>
				          粉丝
				        </th>
				        <th>
				          积分
				        </th>
		                <th>
		                    通过验证
		                </th>
		            </tr>
		            <% for user in @users %>
		            <tr height="35">
		                <td >
		                    <%=user.email %>
		                </td>
						<td >
				          	<%=link_user(user) %>
			            </td>
			            <td >
				            <%=user.posts_count %>
				        </td>
					    <td >
				            <%=user.follow_users_count %> 
				        </td>
					    <td >
				            <%=user.fans_users_count %>
				        </td>
				        <td>
				            <%=user.score %>
				        </td>
		                <td>
		                    <a href="/account/verify/<%=user.user_profile.uuid%>" target="_blank">通过</a>
		                </td>
		            </tr>
		            <% end %>
		        </tbody>
		    </table>
		    <%=will_paginate @users %>
        </div>
        <div class="clear"></div>
    </div>