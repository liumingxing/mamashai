<div id="middle">
    <div id="css_mainbody">
    	<div style="margin: 10px;">
    		<%= link_to "返回", :action=>"index" %>
    	</div>
		<table class="grid">
			<tr>
				<th>发送时间</th>
				<th>发送内容</th>
			</tr>
			<% for message in @messages %>
			<tr>
				<td>
					<%= message.created_at.to_s(:db) %>
				</td>
				<td>
					<%= message.message %>
				</td>
			</tr>
			<% end %>
		</table>
	</div>
</div>