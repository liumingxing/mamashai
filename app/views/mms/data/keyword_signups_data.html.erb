<div id="middle">
    <div id="css_mainbody">
        <h1 class="title">关键词统计</h1>
        <div style="margin:0px 0px 10px 80px;">
            <% form_tag({:action=>:keyword_signups_data},{:method=>'get' }) do %>
            <label for="username">
                查询日期:
            </label>
            <%=date_select :search, :created_at ,:use_month_numbers => true %>
            <input type="submit" value="查询"/><% end %>
        </div>
        <table class="grid">
            <tbody>
                <tr>
                    <th>
                        编号
                    </th>
                    <th>
                        关键词
                    </th>
                    <th>
                        注册数
                    </th>
                </tr>
                <% @keywords.each_with_index do |keyword,i| %>
                <tr height="30">
                    <td>
                        <%=i+1 %>
                    </td>
                    <td>
                        <%=keyword.name %>
                    </td>
                    <td>
                        <%=keyword.signups_count %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    <div class="clear">
    </div>
</div>
<style type="text/css">
    fieldset {
        border: 1px solid #D1D1D1;
        color: #333333;
        line-height: 220%;
        margin: 20px;
        padding: 10px;
    }
    
    legend {
        background: none repeat scroll 0 0 #FFFFFF;
        color: #666666;
        font-weight: 800;
    }
</style>
