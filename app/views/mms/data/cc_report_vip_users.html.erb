<h3>天使妈爸一览表</h3>
<table class="grid">
    <tbody>
        <tr>
            <th>
                用户名
            </th>
            <th>
            </th>
            <% for date in (@date-28)..@date %>
            <th>
                周<%=date.wday %>
            </th>
            <% end %>
        </tr>
        <% i = 1 %>
        <% for user_data in @user_datas %>
        <tr height="35">
            <td>
                <%=link_user(user_data[:user]) %>
            </td>
            <td>
                晒
                <br/>
                评
                <br/>
                转
            </td>
            <% for date_count in user_data[:date_counts] %>
            <td>
                <%=date_count[:posts_count]%>
                <br/>
                <%=date_count[:comments_count]%>
                <br/>
                <%=date_count[:forwards_count]%>
            </td>
            <% end %>
        </tr>
        <% end %>
    </tbody>
</table>
