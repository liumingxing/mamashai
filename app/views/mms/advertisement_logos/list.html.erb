<h1><%= @advertisement.name %>广告管理</h1>

<div style="margin: 10px 0px;">
<a href="/mms/advertisements">返回</a>
</div>

<table class="list" border="1" width="98%">
  <tr class="head">
    <th>ID</th>
    <th>图片</th>
    <th>地址</th>
    <th>鼠标文字提示</th>
    <th>备注</th>
    <th>创建时间</th>
    <th colspan=3>操作</th>
  </tr>
  
<% for advertisement_logo in @advertisement_logos %>
  <tr>
    <td><%= advertisement_logo.id %></td>
    <td><img src="<%=h advertisement_logo.logo %>" /></td>
    <td><%=h advertisement_logo.url %></td>
    <td><%=h advertisement_logo.title %></td>
    <td><%=h advertisement_logo.remark %></td>
    <td><%=h advertisement_logo.created_at.to_s(:db) %></td>
    
    <td><%= link_to '修改', :action => 'edit', :id => advertisement_logo %></td>
    <td><%= link_to '删除', { :action => 'destroy', :id => advertisement_logo }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>


<%= will_paginate @advertisement_logos %>

