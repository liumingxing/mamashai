<div id="middle">
	<% form_tag :action => "expired_action" do %>
    <div id="css_mainbody">
        <h1 class="title">订单管理</h1>
        <div class="menu_bar">
            <span class="info"><b>当前数据：</b> 共有<b class="blue"><%=h @orders.size %></b>条数据</span>
        	<table>
        		<tr>
        			<td width="30%">
        				<a href="javascript:void(0);" id="select_all">全选</a>
        			</td>
					<td width="70%">
						<%= submit_tag "更改为已过期状态" %> &nbsp;&nbsp;注：只更改已选中的订单
        			</td>
        		</tr> 	
			</table>
        </div>
		<div style="text-align:center;" class="green">
            <%= flash[:notice] %>
        </div>
        <table class="grid">
            <thead>
                <tr>
                    <th width="5%">
                        序号
                    </th>
                    <th width="8%">
                        订单号
                    </th>
                    <th width="10%">
                        用户名
                    </th>
                    <th>
                        状态
                    </th>
					<th width="10%">
                        商品种类
                    </th>
                    <th width="8%">
                        总费
                    </th>
                    <th width="10%">
                        创建时间
                    </th>
                    <th width="10%">
                        最后更新
                    </th>
                    <th width="8%">
                        管理
                    </th>
                </tr>
            </thead>
            <tbody>
                <% if @orders.size == 0 %>
                <tr>
                    <td colspan=8>
                        <b>暂无相关记录。</b>
                    </td>
                </tr>
                <% else %>
                <%@orders.each_with_index do |order, index| %>
                <tr>
                    <td>
                        <%= index+1 %>
                    </td>
                    <td>
                        <%= order.order_sn %>
                    </td>
                    <td>
                        <%= link_user(order.user) %>
                    </td>
                    <td>
                        <%= order.get_order_state %>
                    </td>
					<td>
						<% count = order.order_items.count%>
						<% if count > 1%>
						<b class="red">
	                        <%= order.order_items.count %>
						</b>
						<% else %>
						<%= order.order_items.count %>
						<% end %>
                    </td>
                    <td>
                        <%= order.total_money %>
                    </td>
                    <td>
                        <%= order.created_at.strftime("%Y-%m-%d %H:%M") %>
                    </td>
                    <td>
                        <%= order.updated_at.strftime("%Y-%m-%d %H:%M") %>
                    </td>
                    <td>
                        <%= check_box :order_ids,order.id %>
                    	 <%=link_to "查看", mms_tuan_order_path(order), :class=>"delete" ,:target=>"_blank"%>
                    </td>
                </tr>
                <% end %>
                <% end %>
            </tbody>
        </table>
        <%= will_paginate @orders %>
    </div>
	<% end %>
    <div class="clear">
    </div>
  </div>
</div>
<style type="text/css">
  div.menu_bar {
  line-height: 30px;
  padding-left: 50px;
  }
  
  .menu_bar .menu {
  float: left;
  width: 70%;
  }
  
  div.menu_bar a:hover {
  color: #FF9900;
  text-decoration: none;
  }
  
  div.menu_bar a.current {
  color: #FF9900;
  }
  
  span.info {
  width: 30%;
  float: right;
  line-height: 14px;
  text-align: right;
  margin-top: 5px;
  }
</style>
