
<table class="grid">
    <tbody>
        <tr height="40">
            <td class="t01" width="100">
                <span class="red">*</span>
                链接名称： 
            </td>
            <td class="t02">
                <%=text_field :link, :name, :class=>'default_input' %>
				<%=error_message_on :link,:name %>
            </td>
        </tr>
		<tr height="40">
            <td class="t01" width="100">
                <span class="red">*</span>
                链接地址： 
            </td>
            <td class="t02">
                <%=text_field :link, :url, :class=>'default_input' %>
				<%=error_message_on :link,:url %>
            </td>
        </tr>
		<tr height="40">
            <td class="t01" width="100">
                <span class="red">*</span>
                链接分类： 
            </td>
            <td class="t02">
                <%=select :link, :link_category_id, LinkCategory.find(:all).collect {|p| [ p.name, p.id ] }, {:prompt=>'===分类==='} %>
				<%=error_message_on :link,:link_category_id %>
            </td>
        </tr>
		<tr height="40">
            <td class="t01" width="100">
                <span class="red">*</span>
                链接标签： 
            </td>
            <td class="t02">
                <%=select :link, :link_tag_id, LinkTag.find(:all).collect {|p| [ "[#{p.link_category.name}]#{p.name}", p.id ] }, {:prompt=>'===标签==='} %>
				<%=error_message_on :link,:link_tag_id %>
            </td>
        </tr>
    </tbody>
</table>