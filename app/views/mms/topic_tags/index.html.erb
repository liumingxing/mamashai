<div id="middle">
    <div id="css_mainbody">
    	
	<h1 class="title">话题类别<span style="float:right;margin-right: 10px;"><%#= link_to "添加", :action=>'new_type'%></span></h1>
	
	<% age_tag = AgeTag.find(:first, :conditions=>"week_hot = 1") %>

	<div style="margin: 10px; font-size: 20px;">
		本周热点话题：<%= age_tag.short_tag_name%> (<%= age_tag.age.name%>)
	</div>
	<table class="grid">
	  <tr>
	  	<th>类别名称</th>
		<th colspan=3>操作</th>
	  </tr>
	
	<% @ages.each do |t| %>
	  <tr>
	  	<td><%= t.name %></td>
		<td><%= link_to '常规话题', :action=>"regular_topics", :id=>t %></td>
	    <td><%= link_to '一般话题', :action=>"list_tags", :id=>t %></td>
	  </tr>
	<% end %>
	</table>
	</div>
</div>