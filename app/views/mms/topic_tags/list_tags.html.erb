<div id="middle">
    <div id="css_mainbody">
    	
	<h1 class="title"><%=@age.name%>  <span style="float:right;margin-right: 10px;"><%= link_to "添加", :action=>'new_tag', :age_id=>@age%> | <%= link_to "返回", :action=>"index"%></span></h1>
	
	<table class="grid">
	  <tr>
	  	<th>序号</th>
	  	<th>话题名称</th>
		<th>话题短名称</th>
        <th>周访问量</th>
		<th>更新时间</th>
		<th colspan=5>操作</th>
	  </tr>
	
	<% @age_tags.each_with_index do |age_tag, index| %>
	  <tr>
	  	<td><%= index + 1%></td>
	  	<td><%= age_tag.tag.name %></td>
		<td><%= age_tag.short_tag_name %></td>
	  	<td><%= age_tag.week_count %></td>
		<td><%= age_tag.updated_at.to_s(:db) %></td>
	    <td>
            <% if age_tag.is_index_hot%>
            <%= link_to '取消图文话题', {:action => :hide_pic_text_tag, :id => age_tag}, {:style => "color:#FF0000;"} %>
            <% else %>
            <%= link_to '设为图文话题', {:action => :show_pic_text_tag, :id => age_tag}, {:style => "color:#329BCB;"} %>
            <% end %>
        </td>
		<td><%= link_to '置顶', {:action=>"to_top", :id=>age_tag.id} %></td>
	    <td><%= link_to '修改', {:action=>"edit_tag", :id=>age_tag.id} %></td>
	    <td><%= link_to '删除', {:action=>"delete_tag", :id=>age_tag.id}, :confirm => '确定删除吗?', :method => :delete %></td>
	  </tr>
	<% end %>
	</table>
	</div>
</div>