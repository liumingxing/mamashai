<table class="grid">
	<tbody>
        <tr>
			<th>应用图片</th>
            <th>应用名称</th>
            <th>应用简介</th>
            <th>应用路径</th>
            <th>所属电子书</th>
            <th>编辑</th>
            <th>删除</th>
        </tr>
        <% @baiduapp.each do |app| %>
        <tr>
			<td style="padding:5px;">
				<img src="<%= app.image_url %>" />
			</td>
            <td width="150px" style="padding:0px">
				<%=h app.app_name %>
            </td>
            <td width="200px">
            	<%= h app.app_desc %>
            </td>
            <td width="200" style="text-align:left;">
            	<%= app.app_url %>
            </td>
            <td width="200px" align="left">
            	<%= EbookTopic.find_by_id(app.ebook_topic_id).ebook_title %>
            </td>
            <td><%= link_to '编辑', {:action => :edit, :id => app}, {:style => "color:#329BCB;"} %></td>
            <td><%= link_to '删除', {:action => :destroy, :id => app}, {:confirm => "您确定删除吗？", :method => :delete, :style => "color:#329BCB;"} %></td>
        </tr>
        <% end %>
    </tbody>
</table>
