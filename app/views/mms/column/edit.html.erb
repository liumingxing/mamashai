<div id="middle">
    <div id="css_mainbody">
        <h1 class="title">修改专栏作者
			<span style="float:right;margin-right:10px;">
		        <a href="/mms/column" title="返回列表">返回列表</a>
		    </span>
		</h1>			
		<form action="/mms/column/update/<%= @author.id %>" >
		    <table class="grid">
		    <tbody>
		        <tr height="40">
		            <td>请输入作者描述:</td>
					<td><%= text_area :author, :desc%></td>
				</tr>
				<tr>
					<td>
						请选择类别:
					</td>
					<td>
						<% for category in ColumnCategory.find(:all) %>
							<%= check_box_tag "category_ids[]", category.id, @author.category.to_s.include?(category.id.to_s)%><%= category.name %> 
						<% end %>
					</td>
				</tr>
			</tbody>
			</table>	
		    <div id="submit_area" class="ifnull"> 
		      <button class="button_submit" type="submit" onmouseover="this.className='button_submit button_submit_hover';" onmouseout="this.className='button_submit';" >保存</button>
		    </div>
		</form>
    </div>
    <div class="clear"></div>
</div>