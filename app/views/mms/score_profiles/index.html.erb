<div id="middle">
    <div id="css_mainbody">
        <h1 class="title">积分规则管理<span style="float: right; margin-right: 10px;"><%= link_to '添加新的积分规则', "/mms/score_profiles/new" %>
            </span></h1>
        <div style="text-align:center;" class="green">
            <%= flash[:notice] %>
        </div>
        <div id="page_count">
            <span style="float:right;">共有<b class="blue"><%=h @score_profiles.size %>
                </b>条记录</span>
        </div>
        <div class="clear">
        </div>
        <% if @new_profiles.present? %>
		<div class="red center">请对以下积分规则进行设置</div>
        <table class="grid">
            <tr>
                <th width="5%">
                    序号
                </th>
                <th width="10%">
                    触发事件
                </th>
                <th width="25%">
                    描述
                </th>
                <th width="8%">
                    分值
                </th>
				<th width="8%">
                    兑换比例
                </th>
                <th width="10%">
                    创建时间
                </th>
                <th width="10%">
                    操作
                </th>
            </tr>
            <% @new_profiles.each_with_index do |score_profile,index| %>
            <tr>
                <td>
                    <%=(index+1).to_s %>
                </td>
                <td>
                    <%=h score_profile.event %>
                </td>
                <td>
                    <%=h score_profile.description %>
                </td>
                <td>
                    <span class="red"><%=h score_profile.score %></span>
                </td>
				<td>
                    <%=h score_profile.exchange_ratio %>
                </td>
                <td>
                    <%=h (score_profile.created_at.blank?)? '暂无信息' : score_profile.created_at.strftime("%Y年%m月%d日") %>
                </td>
                <td>
                    <%= link_to '修改', "/mms/score_profiles/edit/#{score_profile.id}" %>
                    <%= link_to '删除', "/mms/score_profiles/destroy/#{score_profile.id}", :confirm => '确认删除吗？', :method => :delete %>
                </td>
            </tr>
            <% end %>
        </table>
		<div style="font-size:14px;font-weight:bolder;padding-left:20px;">所有规则</div>
        <% end %>
        <table class="grid">
            <tr>
                <th width="5%">
                    序号
                </th>
                <th width="10%">
                    触发事件
                </th>
                <th width="25%">
                    描述
                </th>
                <th width="8%">
                    分值
                </th>
				<th width="8%">
                    兑换比例
                </th>
                <th width="10%">
                    创建时间
                </th>
                <th width="10%">
                    操作
                </th>
            </tr>
            <% if @score_profiles.blank? %>
            <tr>
                <td colspan=6>
                    <b>暂无记录</b>
                </td>
            </tr>
            <% else %>
            <% @score_profiles.each_with_index do |score_profile,index| %>
            <tr>
                <td>
                    <%=(index+1).to_s %>
                </td>
                <td>
                    <%=h score_profile.event %>
                </td>
                <td>
                    <%=h score_profile.description %>
                </td>
                <td>
                    <%=h score_profile.score %>
                </td>
				<td>
                    <%=h score_profile.exchange_ratio %>
                </td>
                <td>
                    <%=h (score_profile.created_at.blank?)? '暂无信息' : score_profile.created_at.strftime("%Y年%m月%d日") %>
                </td>
                <td>
                    <%= link_to '修改', "/mms/score_profiles/edit/#{score_profile.id}" %>
                    <%= link_to '删除', "/mms/score_profiles/destroy/#{score_profile.id}", :confirm => '确认删除吗？', :method => :delete %>
                </td>
            </tr>
            <% end %>
            <%end %>
        </table>
		<%= will_paginate @score_profiles %>
    </div>
    <div class="clear">
    </div>
</div>
