<div class="week_desc"><%=h 3+(@week.month-1)/4 %>岁<%= (@week.month-1)*3 % 12%>月</div>

<div class="yun_tip">
	<div class="title"><span>发育指标</span></div>
	<div class="content"><%= @week.fayu.gsub("\n", "<br/>").gsub(" ", "&nbsp").html_safe %></div>
	<hr/>
</div>

<div class="yun_tip">
	<div class="title"><span>营养指南</span></div>
	<div class="content"><%= @week.yingyang.gsub("\n", "<br/>").gsub(" ", "&nbsp").html_safe %></div>
	<hr/>
</div>

<div class="yun_tip">
	<div class="title"><span>亲子游戏</span></div>
	<div class="content"><%= @week.qinzi.gsub("\n", "<br/>").gsub(" ", "&nbsp").html_safe %></div>
	<hr/>
</div>

<div class="yun_tip">
	<div class="title"><span>注意事项</span></div>
	<div class="content"><%= @week.zhuyi.gsub("\n", "<br/>").gsub(" ", "&nbsp").html_safe %></div>
	<hr/>
</div>

<div class="page">
	<% if params[:id].to_i > 1 %>
    	<a href="/qing/yu3/<%= params[:id].to_i - 1 %>" hidefocus="true">上个季度</a>
    <% end %>
    <% if params[:id].to_i < 12 %>
    	<a href="/qing/yu3/<%= params[:id].to_i + 1 %>"  hidefocus="true">下个季度</a>
    <% end %>
</div>