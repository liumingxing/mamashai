<div class="layer" id="layer_apply">
    <div class="layer_title">
        <span class="title">取消报名：<%=@event.name %></span>
        <span class="more"><a href="javascript:void(0);" onclick="hide_box();"><img src="/images/layer/del_06.gif"></a></span>
    </div>
    <div class="layer_content">
        <% form_remote_tag :url => {:action => :create_event_quit,:id=>@event_user.id}, :loading => "", :update => "event_user_button_#{@event_user.id}",:html=>{:id=>'event_user_quit_form'} do %>
   
        <table class="grid">
            <tbody>
                <tr height="35">
                    <td class="t01" width="100">
                        取消原因<span class="gray">(必填)</span>：
                    </td>
                    <td class="t02">
                        <%=text_area :event_user, :note,:style=>'width:250px;height:75px;' %>
						<div class="red" id="error_event_quit"></div>
                    </td>
                </tr> 
            </tbody>
        </table>
        <ul class="layer_botton">
            <li>
                <button class="button_submit_s" type="button" onclick="check_event_quit()" onmouseover="this.className='button_submit_s button_submit_s_hover';" onmouseout="this.className='button_submit_s';">
                    确定 
                </button>
            </li>
            <div class="clear">
            </div>
        </ul>
        <% end %>
    </div>
</div>
<script> 
    reset_box(472, 212);
</script>
