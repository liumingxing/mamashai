<% form_remote_tag :url => {:action => :update_nick_name,:id=>@fans.id}, :loading => "", :update => "lbContent" do %>
<table class="grid">
    <tbody>
        <tr height="40">
            <td width="80">
                用户昵称： 
            </td>
            <td>
                <%=@fans.name %>
            </td>
        </tr>
        <tr height="40">
            <td>
                设置昵称： 
            </td>
            <td>
                <%= text_field :follow_user, :fans_nick_name,:class=>'default_input' %>
                <div>
                    <%=error_message_on :follow_user,:fans_nick_name %>
                </div>
            </td>
        </tr>
        <tr height="30">
            <td class="t01" width="50">
            </td>
            <td class="t02">
                说明：对关注的人设置昵称，用于查找。
            </td>
        </tr>
        <tr height="40">
            <td class="t01" width="50">
            </td>
            <td class="t02">
                <button class="button_submit_s" type="submit" onmouseover="this.className='button_submit_s button_submit_s_hover';" onmouseout="this.className='button_submit_s';">
                    确定
                </button>
            </td>
        </tr>
    </tbody>
</table>
<% end %>