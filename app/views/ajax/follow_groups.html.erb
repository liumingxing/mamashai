
<% sum = 0 %>
<% for group in @user.follows_groups %>
<div class="rank_item" onmouseover="this.className='rank_current'" onmouseout="this.className='rank_item'">
    <span class="name">·<a href="/home/by_follows_group?group_id=<%=group.id %>" ><%=group.name %></a><span class="gray">(<%=group.users_count%>)</span></span>
    <span class="changes"><a href="/users/<%=@user.id%>/follows/group_by_group?group=<%=group.id%>">查看</a></span>
</div>
<% sum += group.users_count %>
<% end %>
<div class="rank_item" onmouseover="this.className='rank_current'" onmouseout="this.className='rank_item'">
    <span class="name">·<a href="/home/by_follows_group" >未分组</a><span class="gray">(<%=@user.follow_users_count - sum%>)</span></span>
    <span class="changes"><a href="/users/<%=@user.id%>/follows/group_by_group">查看</a></span>
</div>
<div class="packet">
    <a href="/users/<%=@user.id%>/follows/group_by_group" class="new_packet">管理分组</a>
</div>
<div class="clear">
</div>
