<div class="sharp mt5">
	<div id="dl">
		<div id="dl_left">
			<h1>用户登录</h1>
			<%= form_tag :controller=>'account', :action=>'login_action' do %>
			<% if @errors %>
			<li style="color: red;">登录失败，帐号或密码错误!</li>
			<% end %>
			<li>
				邮箱：
				<input value="<%=h params[:user][:email] if params[:user]%>" autocomplete="off" class="dl_input1" id="user_email" name="user[email]" size="30" type="text" placeholder="请输入登录邮箱..."/>
			</li>
			<li>
				密码：
				<input class="dl_input1" id="user_password" name="user[password]" size="30" type="password" />
			</li>
			<li>
				<input name="is_save" id="is_save" value="true" checked="checked" type="checkbox" class="dl_input2">
				<span>下次自动登录</span>
			</li>
			<li style="padding-left: 50px;">
				<%= submit_tag "登录", :class=>"button2"%>
				&nbsp;&nbsp;
				<a href="/account/find_password">忘记密码？</a>
			</li>
			<% end %>
			<div class="dl_input2" style="margin-top:40px">
				<span>您也可以用以下方式登录</span>
			</div>
			<div id="dl_dlic">
				<ul>
					<li>
						<a href="/account/login_from_weibo" class="xl_login">新浪微博</a>
					</li>
					<li>
						<a href="/account/login_from_tencent" class="tx_login">腾讯微博</a>
					</li>
					<li>
						<a href="/account/login_from_taobao" class="tb_login">淘宝登录</a>
					</li>
					<li>
						<a href="/account/login_from_baidu" class="bd_login">百度登录</a>
					</li>
				</ul>
			</div>
		</div>
		</div>
	</div><!--登录内容-->
	<div><img src="/images/sharp_bottom.jpg" />
	</div>
</div>
