<style>
	form table td {padding-top: 20px;}
	form table td span.tip {color: #333333; font-size: 14px;}
</style>
<div class="sharp mt5">
	<div id="dl">
		<div id="dl_left">
			<%= form_tag({:action=>'signup_action'},{:id=>'personal_signup_id', :onsubmit=>"return check_signup_form()"}) do %>
			<h1>新用户注册</h1>
			<table>
			<tr>
				<td width="160px" align='right'>
					<font>*</font>注册邮箱：
				</td>
				<td width="260px">
				<%= hidden_field_tag "user_signup[from]", params[:from] || "主站" %>
				<%= text_field :user_signup, :email, :class=>'dl_input3 ',:autocomplete=>'off' %>
				</td>
				<td>
					<span class='tip'>用于登录和找回密码</span>
					<span class='error'></span>
					<%=error_message_on :user_signup,:email %>
				</td>
			</tr>
			<tr>
				<td align='right'>
					<font>*</font>昵称：
				</td>
				<td>
				<%= text_field :user_signup, :name, :class=>'dl_input3 '%>
                </td>
                <td>
                	<span class='tip'>2至16位字符</span>
                	<%=error_message_on :user_signup, :name %>
                </td>
			</tr>
			<tr>
				<td align='right'>
				<font>*</font>我的密码：
				</td>
				<td>
				<%= password_field :user_signup, :password, :class=>'dl_input3' %>
                </td>
                <td>
                	<span class='tip'>6至16位字符</span>
                	<%=error_message_on :user_signup,:password %>	
                </td>
			</tr>
			<tr>
				<td align='right'>
					<font>*</font>重复密码：
				</td>
				<td>
				<%= password_field :user_signup, :password_confirmation, :class=>'dl_input3' %>
                </td>
                <td>
                	<%=error_message_on :user_signup,:password_confirmation %>
                </td>
			</tr>
			
			<tr>
				<td colspan=2 align='center'>
				<span><input name="is_agree" id='is_agree' class="dl_input4" value="true" checked="checked" type="checkbox"/>&nbsp;我已阅读并接受《<a href="/html/agreement.html" target="_blank">妈妈晒使用协议</a>》</span>
				<% if flash[:flash_note] == 'error_signup_is_agree' %>
				<span class="formError">您需要先接受使用协议！</span>
		        <% end %>
		       </td>
			</tr>

			<tr>
				<td colspan=2 align="center">
				<%= submit_tag "注册", :class=>"button2"%>
				</td>
			</tr>
			</table>
			<% end %>
		</div>
		<div id="dl_right">
			<div id="dl_right_zc">
				<span>已有妈妈晒账户直接登录</span>
				
				<a href="/account/login" class="button2" style="color: white; font-size: 14px;">登录</a>
				
				<ul>
					<li>
						<a href="/account/login_from_taobao"  class="tb_login">淘宝账号</a>
					</li>
					<li>
						<a href="/account/login_from_weibo"  class="xl_login">新浪微博</a>
					</li>
					<li>
						<a href="/account/login_from_tencent"  class="tx_login">腾讯微博</a>
					</li>
				</ul>
			</div>
		</div>
	</div>
	<!--登录内容-->
	<div><img src="/images/sharp_bottom.jpg" />
	</div>
</div>

<script>
	function check_signup_form()
	{
		if (!$('#is_agree').attr('checked'))
		{
			alert("您需要先接受使用协议");
			return false;
		}
	}
</script>