<div class="sharp mt5">
	<div class="content">
		<div class="cjy_left">

			<h3>宝典</h3>
			<div id="TabbedPanels1" class="TabbedPanels">
				
				<div class="navigate_tab" id="n">
					<ul class="class1">
						<li <%=raw 'class="current"' if !params[:c1] %>>
							<a href="/articles">全部</a>
						</li>
						<% for root in @roots %>
							<li <%=raw  'class="current"' if params[:c1].to_i == root.id%>>
								<a href="<%= url_for :c1=>root.id, :age=>params[:age]%>"><%= root.name %></a>
							</li>
						<% end %>
					</ul>
					<div class="class2">
						<ul>
							<% if params[:c1] %>
								<% for category in @roots_2 %>
									<li <%=raw  'class="current"' if params[:c2].to_i == category.id%>>
										<a href="<%= url_for :age=>params[:age], :c1=>params[:c1], :c2=>category.id %>"><%= category.name %></a>
									</li>
								<% end %>
							<% else %>
								<ul class="s_tab" style="float: left; margin: 8px 0px">
										<li>
											排序：
										</li>
										<li class="s_tab_left<%= "_in" if params[:order].blank?%>">
											<a href="<%= url_for :c1=>params[:c1], :c2=>params[:c2], :age=>params[:age]%>">最新</a>
										</li>
										<li class="s_tab_right<%= "_in" if params[:order] == "views" %>">
											<a href="<%= url_for :c1=>params[:c1], :c2=>params[:c2], :age=>params[:age], :order=>"views"%>">最热</a>
										</li>
								</ul>
							<% end %>
						</ul>
						<div class="clear"></div>
					</div>
				</div>
					<div class="zyxq">
							<% for article in @articles %>
								<div class="zyxq_li">
									<div class="zyxq_img">
										<a href="/articles/article/<%= article.id %>"><img src="<%= article.logo %>"></a>
									</div>
									<div class="zyxq_img_right">
										<dl>
											<dd>
												<a href="/articles/article/<%= article.id %>"><%= article.title %></a>
											</dd>
											<dt>
												浏览数：<%= article.view_count %> &nbsp; 评论数：<%= ArticleComment.count(:conditions=>"article_id = #{article.id}") %>  &nbsp; 发布时间：<%= article.created_at.strftime("%Y年%m月%d日")%>
											</dt>
										</dl>
										<P>
											<%= h cut_html(article.article_content.content,140)  %>
										</P>
									</div>
								</div>
							<% end %> 
						</div>
						<%= will_paginate @articles %>
					</div>

		</div>
		<!--cjy_left-->
		<div class="cjy_right">
			<div class="bdxq_li">
				<div style="padding-left: 30px;">
				<span>年龄段：</span>
				
				<ul>
					<% for age in Age.find(:all) %>
					<li>
						<a href="<%= url_for :c1=>params[:c1], :c2=>params[:c2], :age=>age.id%>"><%= age.name %></a>
					</li>
					<% end %>
				</ul>
				</div>
			</div>

			<%= render :partial=>"/share/taobao_adv_right" %>
		</div>
		<!--cjy_right-->
	</div>
	<div><img src="/images/sharp_bottom.jpg" />
	</div>
</div>