<div class="sharp mt20">
	<div class="content">
		<div class="cjy_left">
			<div id="zl">
				<img src="/images/zl_top.png" />
				<!--
				<div id="main_cover1">
					<img src="/images/cover.jpg" />
				</div>
				-->
				<div id="main_photo3">
					<img src="http://www.mamashai.com<%= @author.user.logo.thumb140%>"/>
					<div class="clear"></div>
					<b><%= @author.user.name %>的专栏</b>
				</div>
				
				<div class="zl_gz">
					<ul>
						<li>
							<%= ColumnBook.count(:conditions=>"user_id = #{@author.user.id}")%> <h4>栏目</h4>
						</li>
						<li><img src="/images/gz_li.jpg"/>
						</li>
						<li>
							<%= ColumnChapter.published.count(:conditions=>"user_id = #{@author.user.id}")%> <h4>文章</h4>
						</li>
					</ul>
				</div>
			</div>
			<DIV id=con>
				<div class="navigate_tab" style="width: 700px;" id="n">
					<ul class="class1">
						<li <%= 'class="current"' if !params[:tp]%>><a href="/column/space/<%= @author.user.id %>">专栏文章</a></li>
						<li <%= 'class="current"' if params[:tp] == "column"%>><a href="/column/space/<%= @author.user.id %>?tp=column">专栏栏目</a></li>
					</ul>
					<% if @column %>
					<div class="class2">
						<ul>
							<li>栏目：<%= @column.name %></li>
						</ul>
						<div class="clear"></div>
					</div>
					<% end %>
				</div>
				<DIV id="chanel_content">
					<% if params[:tp] != 'column' %>
						<% for post in @posts %>
								<%= render :partial=>"/share/post", :locals=>{:post=>post} %>
						<% end %>
						<%= will_paginate @posts %>
					<% else %>
						<%= render :partial=>"books"%>
					<% end %>
				</DIV>
				
			</DIV>
		</div>
		<!--cjy_left-->
		<div class="cjy_right">
			<span class="title">简介 </span>
			<div class="cjy_ts">
				<%= @author.desc %>
			</div>
			<div class="cjy_ts">
				<span class="title">统计 </span>
			</div>
			<div class="zl_tj">
				<ul>
					<li><img src="/images/icon_05_01.jpg" /><%= @author.count_of('visits') %>
					</li>
					<li><img src="/images/icon_05_02.jpg" /><%= @author.count_of('comments') %>
					</li>
					<li><img src="/images/icon_05_03.jpg" /><%= @author.count_of('fowards') %>
					</li>
					<!--
					<li><img src="/images/icon_05_04.jpg" /><%= @author.count_of('favorites') %>
					</li>
					-->
				</ul>
			</div>
			<div class="zl_dz">
				<span class="title">读者 </span>
				<ul>
					<% for visitor in @hot_readers %>
						<% next if !visitor.visitor %>
						<%=render :partial=>'/share/user2',:locals=>{:user_item=>visitor.visitor} %>
					<% end %>
				</ul>
			</div>

			<%= render :partial=>"/share/taobao_adv_right" %>
		</div>
	</div>
	<!--cjy_right-->
	<div><img src="/images/sharp_bottom.jpg" />
	</div>
</div>

<script src="/javascripts/FancyZoom.js" language="JavaScript" type="text/javascript"></script>
<script src="/javascripts/FancyZoomHTML.js" language="JavaScript" type="text/javascript"></script>
<script>
	$(document).ready(function() {
		setupZoom();
	});	
</script>